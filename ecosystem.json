{
  "apps": [
      {
        "name": "goodsapp",
        "script": "./build/server-entry.js",
        "env":{
            "COMON_VARIABLE": "true"
        },
        "env_production": {
            "NODE_ENV": "production",
            "HOST": "localhost"
        }
      }
  ],
  "deploy": {
      "production": {
          "user": "user_00",
          "host": "goods.yesdat.com",
          "ref": "origin/master",
          "repo": "http://p.yesdat.com/diffusion/49/goodsh.git",
          "path": "/data/poetry/testDir/goodsapp",
          "ssh_options": "StrictHostKeyChecking=no",
          "post-deploy": "npm install --registry=https://registry.npm.taobao.org && npm install && npm run deploy && pm2 startOrRestart ecosystem.json --env production",
          "env": {
              "NODE_ENV": "production"
          }
      }
  }
}
